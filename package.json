{
  "name": "potassium-test",
  "version": "1.0.0",
  "description": "A testing tool for PotassiumES libraries and applications",
  "main": "",
  "scripts": {
    "host": "http-server .",
    "eslint": "eslint src example --fix",
    "prettier": "prettier --write src/**/*.{js,json} example/**/*.{js,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/potassiumes/potassium-test"
  },
  "keywords": [
    "tests",
    "potassiumes"
  ],
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-test/issues"
  },
  "homepage": "https://PotassiumES.org/",
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "rules": {
      "no-var": "warn",
      "no-undef": "off",
      "no-console": "off",
      "prefer-const": "warn",
      "no-unused-vars": "off"
    }
  },
  "eslintIgnore": [],
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7"
  },
  "dependencies": {}
}
