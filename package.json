{
  "name": "potassium-test",
  "version": "0.1.0-alpha0",
  "description": "A testing tool for PotassiumES libraries and applications",
  "main": "",
  "scripts": {
    "host": "http-server .",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "prettier": "prettier --write src/*.{js,json} src/**/*.{js,json} example/*.{js,json}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/potassiumes/potassium-test"
  },
  "keywords": [
    "tests",
    "potassiumes"
  ],
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-test/issues"
  },
  "homepage": "https://PotassiumES.org/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "rules": {
      "no-var": "warn",
      "no-undef": "off",
      "no-console": "off",
      "prefer-const": "warn",
      "no-unused-vars": "off",
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [],
  "devDependencies": {
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-server": "^0.12.3",
    "prettier": "^2.0.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "dependencies": {}
}
